<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_month_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Tháng 1 - 2023"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_month_year"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="28"
            android:textColor="@color/white"
            android:textSize="150sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Thứ 2"
            android:textColor="#FFFFFF"
            android:textSize="53sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Năm"
            android:textColor="@color/white"
            android:background="@drawable/bg_tv"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tháng"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/bg_tv"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Ngày"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/bg_tv"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_canchi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Ngày"
            android:textColor="@color/white"
            android:background="@drawable/bg_tv"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Lịch Ngày"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableTop="@drawable/baseline_calendar_today_24"
            android:background="@drawable/bg_tv"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_thang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"

            android:drawableTop="@drawable/baseline_calendar_month_24"
            android:text="Lịch Tháng"
            android:textColor="@color/white"
            android:background="@drawable/bg_tv"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_more_horiz_24"
            android:text="Mở Rộng"
            android:textColor="@color/white"
            android:background="@drawable/bg_tv"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
